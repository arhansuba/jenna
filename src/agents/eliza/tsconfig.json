{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}